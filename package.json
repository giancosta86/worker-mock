{
  "name": "@giancosta86/worker-mock",
  "version": "1.0.0",
  "description": "Minimalist Worker mocks in TypeScript",
  "keywords": [
    "worker",
    "message",
    "passing",
    "mock",
    "testing",
    "TypeScript"
  ],
  "homepage": "https://github.com/giancosta86/worker-mock#readme",
  "bugs": "https://github.com/giancosta86/worker-mock/issues",
  "license": "MIT",
  "author": {
    "name": "Gianluca Costa",
    "email": "gianluca@gianlucacosta.info",
    "url": "https://gianlucacosta.info/"
  },
  "files": [],
  "main": "dist",
  "types": "dist",
  "repository": "giancosta86/worker-mock",
  "scripts": {
    "clean": "rimraf dist coverage giancosta86-*.tgz",
    "clean:all": "yarn clean && rimraf node_modules",
    "format": "prettier --write .",
    "prepack": "yarn check-all && yarn build && yarn prune-dist",
    "check-all": "yarn check-format && yarn lint && yarn test",
    "check-format": "prettier --check .",
    "lint": "eslint . --ext .js,.ts,.jsx,.tsx,.cjs,.mjs",
    "test": "jest --detectOpenHandles",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage",
    "build": "yarn compile-ts && yarn replace-ts-paths",
    "compile-ts": "tsc",
    "replace-ts-paths": "tsconfig-replace-paths --project tsconfig.json",
    "prune-dist": "rimraf -g 'dist/test/' 'dist/**/*.test.*'",
    "watch": "yarn compile-ts --watch"
  },
  "dependencies": {
    "@giancosta86/worker-facade": "^1.0.0",
    "jsdom": "^23.2.0"
  },
  "devDependencies": {
    "@giancosta86/more-jest": "^4.1.0",
    "@swc/core": "^1.3.102",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.11",
    "@types/jsdom": "^21.1.6",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.47.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "prettier": "^3.0.1",
    "rimraf": "^5.0.1",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=18.17.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
